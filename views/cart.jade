extends layout

block content 
     include ./navbar.jade
     .container(ng-controller="cartpage")
     .row
       .col-sm-12.col-md-10.col-md-offset-1
         table.table.table-hover
           thead
             tr
               th Product
               th Quantity
               th.text-center Price
               th.text-center Total
               th  
           tbody
             tr
               td.col-sm-8.col-md-6
                 .media
                   a.thumbnail.pull-left(href='#')
                     img.media-object(src='http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png', style='width: 72px; height: 72px;')
                   .media-body
                     h4.media-heading
                       a(href='#') #{item.title}
                     h5.media-heading
                       |  
                       a(href='#') #{item.description}
               td.col-sm-1.col-md-1(style='text-align: center')
                 input#exampleInputEmail1.form-control(type='email', value='{{quantity}}')
               td.col-sm-1.col-md-1.text-center
                 strong $ #{item.price}
               td.col-sm-1.col-md-1.text-center
                 strong $14.61
               td.col-sm-1.col-md-1
                 button.btn.btn-danger(type='button')
                   span.glyphicon.glyphicon-remove
                   |  Remove
             
             tr
               td    
